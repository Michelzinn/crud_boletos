<%= turbo_frame_tag "bank_billets_menu", class:"flex flex-row self-center w-4/5" do %>
  <div class="flex flex-col border rounded  bg-gray-100 shadow-sm w-full self-center justify-center p-4 space-y-5">
    <div class="flex flex-row w-full justify-between items-center">
      <div class=" rounded border text-gray-600 border-gray-300 bg-white shadow-sm transition-all duration-100 font-bold text-sm px-2 py-1">Meus Boletos</div>

      <%= link_to new_bank_billet_path do %>
        <div class="text-white rounded bg-green-500 hover:bg-green-600 transition-all duration-100 font-bold text-sm px-2 py-1">Criar Boleto</div>
      <% end %>
    </div>
    <% @bank_billets.each do |billet|%>
      <%= render Billet::Component.new(billet: billet) %>
    <% end %>
  </div>
<% end %>



